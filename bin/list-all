#!/usr/bin/env bash

set -euo pipefail

releases_url='https://bintray.com/api/v1/packages/tigervnc/stable/tigervnc'

get_bintray_versions() {
  curl -sL "$releases_url" |
    tr '\n' ' ' |
    grep -o '"versions"[[:space:]]*:[[:space:]]*\[[^]]*\]' |
    grep -o '\[[^]]*\]' |
    tr -d '[]"[:space:]' |
    tr ',' '\n'
}

# stolen from https://github.com/rbenv/ruby-build/pull/631/files#diff-fdcfb8a18714b33b07529b7d02b54f1dR942
sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

echo $(get_bintray_versions | sort_versions)
